{
  "name": "claude-codeui-by-nexalance",
  "displayName": "Claude CodeUI by NexaLance",
  "description": "A Complete Solution for Claude Code UI Chat Extension For VS Code - Inspired by claude-code-chat with Enhanced Features",
  "version": "2.2.2",
  "publisher": "DeveloperJillur",
  "author": "Developer Jillur",
  "repository": {
    "type": "git",
    "url": "https://github.com/developerjillur/claude-codeUI-by-nexalance"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.94.0"
  },
  "categories": [
    "Other",
    "AI",
    "Chat",
    "Machine Learning",
    "Snippets",
    "Programming Languages",
    "Education",
    "Testing",
    "Formatters",
    "Linters"
  ],
  "keywords": [
    "claude code",
    "claude codeui",
    "nexalance",
    "code explanation",
    "code generation",
    "code summary",
    "code transform",
    "vibe coding",
    "prompt language",
    "copilot",
    "claude",
    "ai",
    "assistant",
    "chatbot",
    "chat",
    "anthropic",
    "code",
    "programming",
    "development",
    "productivity",
    "checkpoint",
    "memory",
    "context management"
  ],
  "icon": "icon.png",
  "main": "./out/extension.js",
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "commands": [
      {
        "command": "claude-code-chat.openChat",
        "title": "Open Claude CodeUI",
        "category": "Claude CodeUI",
        "icon": "icon-bubble.png"
      }
    ],
    "keybindings": [
      {
        "command": "claude-code-chat.openChat",
        "key": "ctrl+shift+c",
        "mac": "cmd+shift+c"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "claude-code-chat.openChat"
        }
      ],
      "editor/context": [
        {
          "command": "claude-code-chat.openChat",
          "group": "claude@1",
          "when": "editorTextFocus"
        }
      ],
      "editor/title": [
        {
          "command": "claude-code-chat.openChat",
          "group": "navigation@1",
          "when": "true"
        }
      ],
      "editor/title/context": [
        {
          "command": "claude-code-chat.openChat",
          "group": "claude@1"
        }
      ],
      "explorer/context": [
        {
          "command": "claude-code-chat.openChat",
          "group": "claude@1"
        }
      ],
      "scm/title": [
        {
          "command": "claude-code-chat.openChat",
          "group": "navigation@1",
          "when": "true"
        }
      ],
      "view/title": [
        {
          "command": "claude-code-chat.openChat",
          "group": "navigation@1",
          "when": "view == workbench.explorer.fileView"
        }
      ],
      "touchBar": [
        {
          "command": "claude-code-chat.openChat",
          "group": "editing",
          "when": "true"
        }
      ],
      "menuBar/file": [
        {
          "command": "claude-code-chat.openChat",
          "group": "1_new@1"
        }
      ]
    },
    "views": {
      "claude-code-chat": [
        {
          "id": "claude-code-chat.chat",
          "type": "webview",
          "name": "Claude CodeUI",
          "when": "true",
          "icon": "icon-bubble.png",
          "contextualTitle": "Claude CodeUI by NexaLance"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "claude-code-chat",
          "title": "Claude CodeUI",
          "icon": "icon-bubble.png"
        }
      ]
    },
    "configuration": {
      "title": "Claude CodeUI by NexaLance",
      "properties": {
        "claudeCodeChat.wsl.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable WSL integration for running Claude"
        },
        "claudeCodeChat.wsl.distro": {
          "type": "string",
          "default": "Ubuntu",
          "description": "WSL distribution name (e.g., Ubuntu, Debian)"
        },
        "claudeCodeChat.wsl.nodePath": {
          "type": "string",
          "default": "/usr/bin/node",
          "description": "Path to Node.js in the WSL distribution"
        },
        "claudeCodeChat.wsl.claudePath": {
          "type": "string",
          "default": "/usr/local/bin/claude",
          "description": "Path to Claude executable in the WSL distribution"
        },
        "claudeCodeChat.thinking.intensity": {
          "type": "string",
          "enum": [
            "think",
            "think-hard",
            "think-harder",
            "ultrathink"
          ],
          "default": "think",
          "description": "Thinking mode intensity level. Higher levels provide more detailed reasoning but consume more tokens."
        },
        "claudeCodeChat.permissions.yoloMode": {
          "type": "boolean",
          "default": false,
          "description": "Enable Yolo Mode to skip all permission checks. Use with caution as Claude can execute any command without asking."
        },
        "claudeCodeChat.model.default": {
          "type": "string",
          "enum": [
            "opus",
            "sonnet",
            "haiku",
            "default"
          ],
          "default": "sonnet",
          "enumDescriptions": [
            "Opus 4.5 - Most powerful model for complex reasoning ($5/$25 per 1M tokens)",
            "Sonnet 4.5 - Balanced performance and cost (Recommended) ($3/$15 per 1M tokens)",
            "Haiku 4.5 - Fast and cost-efficient ($0.80/$4 per 1M tokens)",
            "Default - Uses Claude Code CLI default configuration"
          ],
          "description": "Default model to use for Claude CodeUI conversations"
        },
        "claudeCodeChat.model.maxTokens": {
          "type": "number",
          "default": 16384,
          "minimum": 1024,
          "maximum": 128000,
          "description": "Maximum output tokens for Claude responses (1024-128000)"
        },
        "claudeCodeChat.permissions.mode": {
          "type": "string",
          "enum": [
            "default",
            "plan",
            "acceptEdits",
            "bypassPermissions"
          ],
          "default": "default",
          "enumDescriptions": [
            "Default - Read-only by default, asks before modifications",
            "Plan Mode - Analyze code without modifying (read-only)",
            "Accept Edits - Auto-approve file edits (still asks for commands)",
            "Bypass Permissions - Skip all permission prompts (dangerous)"
          ],
          "description": "Default permission mode for Claude CodeUI operations"
        },
        "claudeCodeChat.memory.autoInject": {
          "type": "boolean",
          "default": true,
          "description": "Automatically inject project memory context into prompts. This helps Claude understand your project history, decisions, and patterns."
        },
        "claudeCodeChat.memory.maxContextSize": {
          "type": "number",
          "default": 4000,
          "minimum": 500,
          "maximum": 16000,
          "description": "Maximum characters of memory context to inject (500-16000). Larger values provide more context but use more tokens."
        },
        "claudeCodeChat.plan.mode": {
          "type": "string",
          "enum": [
            "planfast",
            "ask",
            "agent",
            "auto"
          ],
          "default": "ask",
          "enumDescriptions": [
            "Plan Fast - Quick plan overview, then immediate implementation",
            "Ask Mode - Detailed planning with approval required before execution",
            "Agent Mode - Full autonomous agent that analyzes, plans, and executes independently",
            "AutoMode - Creates comprehensive plan first, then automatically executes with full autonomy"
          ],
          "description": "Default plan mode for Claude CodeUI. Controls how Claude approaches your requests."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.94.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.5.0",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3"
  }
}
